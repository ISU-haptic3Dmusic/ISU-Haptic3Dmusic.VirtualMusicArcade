{ Script for instrument Pongs.nki used in Virtual Music Arcade April 2013 }on init     declare ui_menu $selectGroupStart        add_menu_item ($selectGroupStart,"0 <NULL>",0)        add_menu_item ($selectGroupStart,"1 laughExtended",1)        add_menu_item ($selectGroupStart,"2 LaughExtended1",2)        add_menu_item ($selectGroupStart,"3 LaughGutteralRep2",3)        add_menu_item ($selectGroupStart,"4 LaughGutterRep1",4)        add_menu_item ($selectGroupStart,"5 LaughManRep1",5)        add_menu_item ($selectGroupStart,"6 LaughManRep2",6)        add_menu_item ($selectGroupStart,"7 LaughManRep3",7)        add_menu_item ($selectGroupStart,"8 maleChoke02",8)        add_menu_item ($selectGroupStart,"9 maleGrr01",9)        add_menu_item ($selectGroupStart,"10 maleGrr02",10)        add_menu_item ($selectGroupStart,"11 maleSadCry01",11)        add_menu_item ($selectGroupStart,"12 maleFrust01",12)        add_menu_item ($selectGroupStart,"13 groan1",13)        add_menu_item ($selectGroupStart,"14 hey2",14)        add_menu_item ($selectGroupStart,"15 wo",15)        add_menu_item ($selectGroupStart,"16 timer-first-half-loop",16)        add_menu_item ($selectGroupStart,"17 toss-throw.wav",17)        add_menu_item ($selectGroupStart,"18 LaughWomanManiac1",18)        add_menu_item ($selectGroupStart,"19 LaughWomanRep4",19)        add_menu_item ($selectGroupStart,"20 LaughWomanWitchy",20)        add_menu_item ($selectGroupStart,"21 ",21)        add_menu_item ($selectGroupStart,"22 ",22)        add_menu_item ($selectGroupStart,"23 ",23)        add_menu_item ($selectGroupStart,"24 ",24)    $selectGroupStart := 0    set_controller(0,0)         make_perfviewend onon ui_control ($selectGroupStart){ implements UI for manual use of keyswitch from menu selection, in banks (CC0) of 24 } { - sample zones should not use keyrange of 0-23, as these are reserved for keyswitches }      select $selectGroupStart        case 0 to 23            set_controller(0,0)            message ("Bank 1 selected using keyswitch " & $selectGroupStart)        case 24 to 47            set_controller(0,1)            message ("Bank 2 selected using keyswitch " & ($selectGroupStart - 24))    end select        play_note($selectGroupStart,1,0,1)    end onon note{ sync menu selection with keyswitches }        if ($EVENT_NOTE < 24)        $selectGroupStart := $EVENT_NOTE + %CC[0]    end if    end on