{ Script for instrument Pongs.nki used in Virtual Music Arcade April 2013 }on init     declare ui_menu $selectGroupStart        add_menu_item ($selectGroupStart,"0 <NULL>",0)        add_menu_item ($selectGroupStart,"1 pongblipa5",1)        add_menu_item ($selectGroupStart,"2 pongblipc3",2)        add_menu_item ($selectGroupStart,"3 mushroom",3)        add_menu_item ($selectGroupStart,"4 waterdrop",4)        add_menu_item ($selectGroupStart,"5 tonesP5up",5)        add_menu_item ($selectGroupStart,"6 tone",6)        add_menu_item ($selectGroupStart,"7 tock",7)        add_menu_item ($selectGroupStart,"8 8-bit01",8)        add_menu_item ($selectGroupStart,"9 8-bit02",9)        add_menu_item ($selectGroupStart,"10 8-bit03",10)        add_menu_item ($selectGroupStart,"11 8-bit04",11)        add_menu_item ($selectGroupStart,"12 8-bit05",12)        add_menu_item ($selectGroupStart,"13 8-bit06",13)        add_menu_item ($selectGroupStart,"14 8-bit07",14)        add_menu_item ($selectGroupStart,"15 8-bit08",15)        add_menu_item ($selectGroupStart,"16 8-bit09",16)        add_menu_item ($selectGroupStart,"17 8-bit10",17)        add_menu_item ($selectGroupStart,"18 8-bit11",18)        add_menu_item ($selectGroupStart,"19 8-bit12",19)        add_menu_item ($selectGroupStart,"20 8-bit13",20)        add_menu_item ($selectGroupStart,"21 <unused>",21)        add_menu_item ($selectGroupStart,"22 <unused>",22)        add_menu_item ($selectGroupStart,"23 <unused>",23)        add_menu_item ($selectGroupStart,"24 <unused>",24)    $selectGroupStart := 0    set_controller(0,0)         make_perfviewend onon ui_control ($selectGroupStart){ implements UI for manual use of keyswitch from menu selection, in banks (CC0) of 24 } { - sample zones should not use keyrange of 0-23, as these are reserved for keyswitches }      select $selectGroupStart        case 0 to 23            set_controller(0,0)            message ("Bank 1 selected using keyswitch " & $selectGroupStart)        case 24 to 47            set_controller(0,1)            message ("Bank 2 selected using keyswitch " & ($selectGroupStart - 24))    end select        play_note($selectGroupStart,1,0,1)    end onon note{ sync menu selection with keyswitches }        if ($EVENT_NOTE < 24)        $selectGroupStart := $EVENT_NOTE + %CC[0]    end if    end on